model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  role     String
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}
